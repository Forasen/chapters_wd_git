#include<iostream>
#include<cstring>

const std::string& shorterString(const std::string& lhs, const std::string& rhs) const
{
    return (lhs.size() < rhs.size() ? lhs : rhs);
}

int main(void)
{
    std::string str1, str2;
    std::cout<<"Enter two strings: "<<std::endl;
    std::cin>>str1>>str2;
    std::cout<<shorterString(str1, str2)<<std::endl;

    return 0;
}
